general {
        interval = 1
	output_format = i3bar
}

order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "tztime local"

wireless _first_ {
        format_up = "W: %ip"
        format_down = "W: down"
}

ethernet _first_ {
        format_up = "E: %ip"
        format_down = "E: down"
}

battery all {
        format = "%percentage"
}

tztime local {
        format = "%Y-%m-%d (%u) %H:%M"
}
